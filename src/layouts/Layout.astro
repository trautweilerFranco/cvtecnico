---
// src/layouts/Layout.astro
import "../styles/global.css";

interface Props {
  title: string;
}

const { title } = Astro.props;
// Obtenemos la base URL definida en astro.config.mjs autom√°ticamente
const baseUrl = import.meta.env.BASE_URL;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="CV de Franco Trautweiler" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href={`${baseUrl}/favicon.svg`} />
    <title>{title}</title>
  </head>
  <body
    class="bg-slate-950 text-slate-300 font-sans antialiased selection:bg-blue-900 selection:text-blue-50"
  >
    <slot />
  </body>
</html>
