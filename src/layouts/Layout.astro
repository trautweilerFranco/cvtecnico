---
// src/layouts/Layout.astro

import "../styles/global.css"; // Verifica que la ruta sea correcta

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="CV de Franco Trautweiler" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
  </head>
  <body
    class="bg-slate-950 text-slate-300 font-sans antialiased selection:bg-blue-900 selection:text-blue-50"
  >
    <slot />
  </body>
</html>
